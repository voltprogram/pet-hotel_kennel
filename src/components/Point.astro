---
interface Props {
  tag: string;
  title: string;
  text: string;
}

const {tag, title, text} = Astro.props;
---
<div class="point__inner">
  <div class="point__content">
    <p class="point__tag">{tag}</p>
    <p class="point__title">{title}</p>
    <p class="point__txt">{text}</p>
  </div>
</div>

<style>
.point__inner {
  max-width: 800px;
  margin: 0 auto;
  box-sizing: border-box;

  .point__content {
    width: 100%;
    padding: 4.0rem 2.4rem;
    text-align: center;
    background-color: #ffffff;
    border-radius: 40px;
    margin: 0 auto 4.0rem;

    .point__tag {
      font-size: 2.4rem;
      font-weight: 500;
      color: #ffffff;
      background-color: #B24759;
      width: fit-content;
      padding: 0 3.2rem;
      border-radius: 999px;
      margin: 0 auto 2.4rem;
    }
    .point__title {
      font-size: 2.4rem;
      font-weight: 500;
      color: #B24759;
      margin-bottom: 2.4rem;
    }
    .point__txt {
      text-align: left;
    }
  }
}
@media screen and (max-width: 768px) {
  .point__inner {
    max-width: 560px;
    padding: 0 5%;

    .point__content {
      width: 100%;
      padding: 2.4rem 1.6rem;
      margin: 0 auto 2.4rem;

      .point__tag {
        font-size: 2.0rem;
        padding: 0 2.4rem;
        margin: 0 auto 1.6rem;
      }
      .point__title {
        font-size: 2.0rem;
        margin-bottom: 1.6rem;
      }
      .point__txt {
        font-size: 1.4rem;
      }
    }
  }
}
</style>