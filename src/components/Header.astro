---
import HeaderLogo from "@/assets/img/header-logo.png";
import TelIcon from "@/assets/img/phone-icon.svg";
import LineBtn from "@/assets/img/line-icon.svg";
import GlobalNav from "@/components/GlobalNav.astro";
import SnsContent from "@/components/SnsContent.astro";
const name = "ペットホテル犬寝";
const engName = "PET HOTEL KENNEL"
---

<header class="global__header">
  <div class="header__top">
    <a class="header__logo-content" href="/">
      <img src={HeaderLogo.src} width={HeaderLogo.width} height={HeaderLogo.height} alt="犬寝ロゴ" decoding="async">
      <h1>{ name }<span>{ engName }</span></h1>
    </a>
    <div class="btn__pc-content">
      <div class="tel__btn">
        <p>営業時間  6:00~21:00</p>
        <a href="tel:07022124287">070-2212-4287</a>
      </div>
      <a class="line__btn" href="/line">
        <img src={LineBtn.src} width={LineBtn.width} height={LineBtn.height} alt="LINE友達追加" decoding="async">
      </a>
    </div>
    <button class="hamburger" aria-label="メニューを開く">
      <span class="hamburger__line"></span>
    </button>
  </div>
  <div class="header__bottom">
    <!-- ナビ：スマホではドロワー表示 -->
    <div class="drawer-nav">
      <GlobalNav variant="header" />

      <!-- btn__content をスマホのドロワーメニュー内にも配置 -->
      <div class="btn__sp-content">
        <SnsContent variant="header" />
        <div class="tel__sp-btn">
          <a href="tel:07022124287">お電話でのお問い合せ<span class="tel__btn-txt">070-2212-4287</span></a>
        </div>
        <div class="hours__sp-content">
          <p>営業時間  6:00~21:00</p>
          <p>定休日  不定休</p>
        </div>
      </div>
    </div>
  </div>
</header>

<style>
.global__header {
  background-color: #F8F7F4;
  box-shadow: 5px 5px 10px 0 rgba(0, 0, 0, .25);
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 999;

  .header__top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: .8rem 2% 0;

    .header__logo-content {
      position: relative;
      display: flex;
      align-items: center;
      gap: .8rem;
      transition: .3s ease;
      z-index: 1000;

      & img {
        width: 6.6rem;
        height: 100%;
      }
      & h1 {
        font-size: 3.2rem;
        font-weight: 700;
        font-variation-settings: "wght" 700;
        color: #B24759;
        display: flex;
        flex-flow: column;
        justify-content: center;
        align-items: center;
      }
      & h1 span {
        font-size: 1.6rem;
        font-weight: 500;
        font-variation-settings: "wght" 400;
        color: #333333;
      }
    }
    .btn__pc-content {
      display: flex;
      align-items: center;
      gap: 2.4rem;

      .tel__btn p {
        font-size: 1.6rem;
        font-weight: 500;
      }
      .tel__btn a {
        font-size: 3.2rem;
        font-weight: 700;
        color: #B24759;
        display: flex;
        align-items: center;
        gap: .8rem;
        transition: .3s ease;

        &::before {
          content: '';
          display: inline-block;
          width: 3.2rem;
          height: 3.2rem;
          background-image: url(../assets/img/phone-icon.svg);
          background-repeat: no-repeat;
          background-size: contain;
        }
      }
      .line__btn {
          width: 20rem;
          height: 100%;
          transition: .3s ease;
      }
    }
    .hamburger {
      display: none;
    }
  }
  .header__bottom {
    padding-bottom: .8rem;

    .btn__sp-content {
      display: none;
    }
  }
}
@media screen and (min-width: 769px) {
  .header__logo-content:hover,
  .tel__btn a:hover,
  .line__btn:hover {
    opacity: .7;
  }
}
@media screen and (max-width: 768px) {
  .global__header {
    padding: 0;

    .header__top {
      padding: 0 0 0 2%;

      .header__logo-content {

        & img {
          width: 3.4rem;
          height: 100%;
        }

        & h1 {
          font-size: 2.4rem;
        }

        & h1 span {
          font-size: 1rem;
        }
      }
      .btn__pc-content {
        display: none;
      }
      .hamburger {
        position: relative;
        width: 5.4rem;
        height: 5.4rem;
        top: 0;
        right: 0;
        background-color: #B24759;
        display: flex;
        flex-flow: column;
        justify-content: center;
        align-items: center;
        gap: .6rem;
        z-index: 999;

        &::before {
          content: 'Menu';
          display: inline-block;
          font-size: 1.2rem;
          color: #ffffff;
          font-weight: 300;
          position: absolute;
          bottom: .4rem;
          left: 50%;
          transform: translate( -50%, 0);
          line-height: 1;
          transition: .3s;
        }

        .hamburger__line {
          display: block;
          position: relative;
          bottom: .4rem;
          width: 26px;
          height: 2px;
          background-color: #fff;
          border-radius: 2px;
          transition: .3s;

          &::before,
          &::after {
            content: '';
            position: absolute;
            left: 0;
            width: 26px;
            height: 2px;
            background-color: #ffffff;
            border-radius: 2px;
            transition: .3s;
          }
          &::before {
            top: -8px;
            animation: menu-barTop 0.6s forwards;
          }
          &::after {
            top: 8px;
            animation: menu-barBottom 0.6s forwards;
          }
        }
        &.is-active {
          background-color: #8B3342;

          &::before {
            content: "Close";
            bottom: .4rem;
          }
          .hamburger__line {
            background-color: transparent;

            &::before {
              top: 0;
              transform: rotate(45deg);
            }

            &::after {
              top: 0;
              transform: rotate(-45deg);
            }
          }
        }
      }
    }
    .header__bottom {
      position: fixed;
      top: 0;
      right: -100%;
      width: 100%;
      height: 100vh;
      background: #F8F7F4;
      padding: 5.4rem 2rem;
      transition: .4s ease;
      display: flex;
      flex-direction: column;
      gap: 3rem;
      z-index: 998;
      overflow-y: auto;

      &.open {
        right: 0;
        opacity: 1;
      }
      .drawer-nav {
        padding-top: 6.4rem;
      }
      a,
      .btn__sp-content {
        opacity: 0;
        transition: 0.4s ease;

        .tel__sp-btn {
          margin-bottom: 1.6rem;

           a {
          display: flex;
          flex-flow: column;
          align-items: center;
          gap: .8rem;
          width: 24rem;
          padding: .8rem 0;
          border-radius: 12px;
          background-color: #8B3342;
          color: #ffffff;
          font-size: 1.6rem;
          font-weight: 500;

          .tel__btn-txt {
            position: relative;
            display: flex;
            align-items: center;
            gap: .8rem;
            padding: .8rem 2rem;
            border-radius: 999px;
            background-color: #ffffff;
            color: #8B3342;
            font-size: 2rem;
            font-weight: bold;

              &::before {
                content: '☎︎';
              }
            }
          }
        }
        .hours__sp-content {
          display: flex;
          flex-flow: column;
          align-items: center;
          gap: .8rem;
          margin-bottom: 2.4rem;
        }
      }
      &.open a,
      &.open .btn__sp-content {
        opacity: 1;
      }
      .btn__sp-content {
        display: flex;
        flex-flow: column;
        align-items: center;
      }
    }
  }
}
</style>

<script is:client>
  const hamburger = document.querySelector(".hamburger");
  const headerBottom = document.querySelector(".header__bottom");
  const lines = document.querySelector(".hamburger__line");

  hamburger.addEventListener("click", () => {
    hamburger.classList.toggle("is-active");
    headerBottom.classList.toggle("open");
  });
</script>